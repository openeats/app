<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="cloudnine.openeats.ProfileFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:id="@+id/profile_details">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/profile_picture"
                        android:src="@drawable/food1"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="120dp"
                        android:background="@android:color/white" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="120dp"
                        android:id="@+id/profile_picture_rating"
                        android:background="@color/ratingHealthy" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gaurang Dave"
                    android:id="@+id/user_name"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="1,609\nPosts"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_text_view"
                        android:id="@+id/post_count"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="1,609\nReviews"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_text_view"
                        android:id="@+id/review_count"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="1.5M\nFollowers"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_text_view"
                        android:id="@+id/followers_count"
                        android:textAlignment="center"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_moto"
                    android:text="Live and  Live"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:padding="5dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:padding="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="3dp"
            android:verticalSpacing="3dp"
            android:divider="@null"
            android:id="@+id/image_grid">

        </GridView>



    </LinearLayout>


</FrameLayout>
